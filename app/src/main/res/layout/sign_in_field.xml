<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/signInViewContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/mainIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/_639713_1" />

    <TextView
        android:id="@+id/signInView"
        style="@style/sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:text="@string/sign_in" />

    <LinearLayout
        android:id="@+id/signUpContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/haveNotAccountView"
            style="@style/have_not_had_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/have_not_had_account" />

        <TextView
            android:id="@+id/signUpView"
            style="@style/sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@string/sign_up" />
    </LinearLayout>

    <EditText
        android:id="@+id/signInContent"
        style="@style/hint_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_edit_text"
        android:hint="@string/sign_in_hint"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textAppearance="@style/edit_text" />

    <EditText
        android:id="@+id/passwordContent"
        style="@style/hint_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_edit_text"
        android:drawableEnd="@drawable/ic_eye_visible"
        android:hint="@string/password_hint"
        android:inputType="textPassword"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textAppearance="@style/edit_text" />

    <Button
        android:id="@+id/signInAction"
        style="@style/sign_in_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_edit_text"
        android:text="@string/sign_in_action" />

    <TextView
        android:id="@+id/forgotPasswordView"
        style="@style/forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="@string/forgot_password" />
</LinearLayout>

