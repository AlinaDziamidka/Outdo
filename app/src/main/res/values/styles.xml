<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="header_text_style">
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">@font/gilroy_semibold</item>
    </style>

    <style name="sign_up">
        <item name="android:textColor">@color/blue_text_color</item>
        <item name="fontFamily">@font/gilroy_semibold</item>
    </style>

    <style name="edit_text">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="hint_text" parent="edit_text">
        <item name="android:textColor">@color/grey_text_color</item>
        <item name="fontFamily">@font/gilroy_regular</item>
    </style>

    <style name="button_action">
        <item name="fontFamily">@font/gilroy_semibold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="forgot_password" parent="sign_up">
        <item name="fontFamily">@font/gilroy_medium</item>
    </style>

    <style name="screen_header_text">
        <item name="fontFamily">@font/gilroy_semibold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="challenges_name_title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="show_all_text" parent="sign_up">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="notification_count">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="default_grey_text_color_text">
        <item name="android:textColor">@color/grey_text_color</item>
    </style>

    <style name="challenges_name" parent="button_action">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="default_semibold_text_style">
        <item name="fontFamily">@font/gilroy_semibold</item>
    </style>

    <style name="progress">
        <item name="android:textColor">@color/grey_light_text_color</item>
    </style>

    <style name="progress_count" parent="default_semibold_text_style">
        <item name="android:textColor">@color/grey_text_color</item>
    </style>

    <style name="bottom_nav_text" parent="default_semibold_text_style">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/bottom_nav_text_color</item>
    </style>

    <style name="invalid_username_or_password_text">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/error_text_color_red</item>
    </style>

    <style name="password_requirements_text">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="create_group_action" parent="button_action">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="default_avatar">
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/gilroy_extrabold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="card_title">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/gilroy_semibold</item>
    </style>

    <style name="default_grey_darken_text_color_text">
        <item name="android:textColor">@color/grey_darken_text_color</item>
    </style>

    <style name="switch_action_name">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/gilroy_medium</item>
        <item name="android:textColor">@color/switch_action_text_color</item>
    </style>

    <style name="active_switch_action_name">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/gilroy_semibold</item>
        <item name="android:textColor">@color/color_primary</item>
    </style>

    <style name="scores_text" parent="switch_action_name" />

    <style name="description_text">
        <item name="android:textColor">@color/description_text_color</item>
    </style>

    <style name="achievement_title">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="add_friends_screen_action_back">
        <item name="fontFamily">@font/gilroy_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/action_blue</item>
    </style>

    <style name="friend_card_text_style">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/gilroy_semibold</item>
    </style>

    <style name="friend_card_delete">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/error_text_color_red</item>
    </style>

    <style name="notification_title" parent="friend_card_text_style"/>

    <style name="simple_button_action" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="fontFamily">@font/gilroy_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="unselected_simple_button_action" parent="simple_button_action">
      <item name="android:textColor">@color/color_primary</item>
    </style>

    <style name="create_challenge_screen_set_exact_time">
        <item name="android:textColor">@color/blue_text_color</item>
    </style>

</resources>