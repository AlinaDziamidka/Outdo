<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="sign_in">
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">@font/gilroy_semibold</item>
    </style>

    <style name="have_not_had_account">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="sign_up" parent="have_not_had_account">
        <item name="android:textColor">@color/blue_text_color</item>
        <item name="fontFamily">@font/gilroy_semibold</item>
    </style>

    <style name="edit_text">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.005</item>
    </style>

    <style name="hint_text" parent="edit_text">
        <item name="android:textColor">@color/hint_text_color</item>
        <item name="fontFamily">@font/gilroy_regular</item>
    </style>

    <style name="sign_in_action" parent="have_not_had_account">
        <item name="fontFamily">@font/gilroy_semibold</item>
        <item name="android:letterSpacing">0.005</item>
        <item name="textAllCaps">false</item>
<!--        <item name="android:stateListAnimator">@animator/sign_in_state_list_animator</item>-->
    </style>

    <style name="forgot_password" parent= "sign_up">
        <item name="fontFamily">@font/gilroy_medium</item>
        <item name="android:letterSpacing">0.005</item>
</style>
    </resources>